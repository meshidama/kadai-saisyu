<%= form_with(model: @micropost) do |f| %>
  <div class="mb-3">
    <%= f.text_area :content, class: 'form-control', rows: 5 %>
    <%= f.label :kanryou, 'タスク状態の選択' %>
    <%= f.select :kanryou, {'タスクとして投稿': 1, '完了済みタスクとして投稿': 2}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
  </div>
  <%= f.submit 'タスク投稿', class: 'btn btn-primary w-100' %>
<% end %>