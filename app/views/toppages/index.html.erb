<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @micropost) do |f| %>
        <div class="mb-3">
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
          <%= f.label :kanryou, 'タスク状態の選択' %>
          <%= f.select :kanryou, {'タスクとして投稿': 1, '完了済みタスクとして投稿': 2}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
        </div>
        <%= f.submit 'タスク投稿', class: 'btn btn-primary w-100' %>
      <% end %>
    </aside>
    <div class="col-sm-8">
      <%= render 'microposts/microposts', microposts: @microposts %>
    </div>
  </div>
<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>ようこそタスク管理システムへ</h1>
      <%= link_to 'サインアップして下さい', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>